{
  "name": "architecture-decision-record",
  "version": "1.0.0",
  "type": "module",
  "description": "An AI-assisted tool for drafting architecture decision records (ADRs) using the standard GitHub template format",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build:css": "tailwindcss -i css/tailwind-input.css -o css/tailwind.css",
    "build": "npm run build:css && esbuild js/app.js --bundle --outfile=app-bundle.js --platform=browser",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:e2e": "playwright test",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:coverage:check": "./scripts/coverage-check.sh",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "validate": "./scripts/validate.sh",
    "validate:docs": "bash ./scripts/lib/validate-docs.sh",
    "serve": "npm run build && python3 -m http.server 8000 --directory .",
    "deploy": "./scripts/deploy-web.sh"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "autoprefixer": "^10.4.23",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "fake-indexeddb": "^6.2.5",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.19",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "keywords": [
    "architecture-decision-record",
    "adr",
    "ai-assisted",
    "workflow"
  ],
  "author": "bordenet",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bordenet/architecture-decision-record.git"
  },
  "bugs": {
    "url": "https://github.com/bordenet/architecture-decision-record/issues"
  },
  "homepage": "https://bordenet.github.io/architecture-decision-record/"
}
