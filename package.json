{
  "name": "architecture-decision-record",
  "version": "1.0.0",
  "description": "An AI-assisted tool for drafting architecture decision records (ADRs) using the standard GitHub template format",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bordenet/architecture-decision-record.git"
  },
  "scripts": {
    "build:css": "tailwindcss -i css/tailwind-input.css -o css/tailwind.css",
    "build": "npm run build:css && esbuild js/app.js --bundle --outfile=app-bundle.js --platform=browser",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=\\.test\\.js$",
    "test:e2e": "playwright test",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "eslint js/**/*.js --fix",
    "quality": "npm run lint && npm run test:coverage",
    "validate": "./scripts/validate.sh",
    "validate:docs": "bash ./scripts/lib/validate-docs.sh",
    "serve": "npm run build && python3 -m http.server 8000 --directory .",
    "deploy": "./scripts/deploy-web.sh",
    "prepare": "command -v pre-commit >/dev/null 2>&1 && pre-commit install || echo 'pre-commit not installed, skipping hook setup'"
  },
  "keywords": [
    "architecture-decision-record",
    "adr",
    "ai-assisted",
    "workflow"
  ],
  "author": "Matt J Bordenet",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.57.0",
    "autoprefixer": "^10.4.23",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "fake-indexeddb": "^6.2.5",
    "globals": "^17.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.19"
  },
  "bugs": {
    "url": "https://github.com/bordenet/architecture-decision-record/issues"
  },
  "homepage": "https://bordenet.github.io/architecture-decision-record/"
}
